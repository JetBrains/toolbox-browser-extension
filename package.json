{
  "name": "@jetbrains/toolbox-browser-extension",
  "version": "1.0.0",
  "description": "Browser extension for JetBrains Toolbox",
  "license": "Apache-2.0",
  "type": "module",
  "scripts": {
    "prebuild": "eslint .",
    "build:chrome": "webpack --bail --mode production --env browser=chrome",
    "build:firefox": "webpack --bail --mode production --env browser=firefox",
    "postbuild": "node .scripts/generate-readme.js | node .scripts/generate-license-list.js",
    "build:dev:chrome": "webpack --bail --mode development --devtool inline-source-map --infrastructure-logging-debug --env browser=chrome",
    "build:dev:firefox": "webpack --bail --mode development --devtool inline-source-map --infrastructure-logging-debug --env browser=firefox",
    "watch:chrome": "webpack -w --env browser=chrome",
    "watch:firefox": "webpack -w --env browser=firefox",
    "prepare": "husky",
    "postinstall": "node .scripts/ensure-core.js"
  },
  "dependencies": {
    "@jetbrains/logos": "^2.2.28",
    "bitbucket-url-to-object": "^0.3.0",
    "github-url-to-object": "^4.0.4",
    "parse-bitbucket-url": "^0.3.0",
    "selector-observer": "^2.1.6",
    "webext-permissions": "^3.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.24.4",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/preset-env": "^7.24.4",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "core-js": "^3.37.0",
    "eslint": "^8.57.0",
    "globals": "^15.1.0",
    "husky": "^9.0.11",
    "license-checker-rseidelsohn": "^4.3.0",
    "lint-staged": "^15.2.2",
    "node-polyfill-webpack-plugin": "^3.0.0",
    "terser-webpack-plugin": "^5.3.10",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4"
  },
  "lint-staged": {
    "*.js": [
      "yarn prebuild --fix"
    ]
  }
}
