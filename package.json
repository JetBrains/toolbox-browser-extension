{
  "name": "@jetbrains/toolbox-browser-extension",
  "version": "1.0.0",
  "description": "Browser extension for JetBrains Toolbox",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "eslint .",
    "build": "webpack --bail --mode production",
    "postbuild": "node distribution/generate-readme.js",
    "build:dev": "webpack --bail --mode development --devtool inline-source-map",
    "watch": "webpack -w",
    "prepare": "husky install"
  },
  "dependencies": {
    "@jetbrains/logos": "^2.2.9",
    "bitbucket-url-to-object": "^0.3.0",
    "content-scripts-register-polyfill": "1.0.0",
    "github-url-to-object": "^4.0.4",
    "parse-bitbucket-url": "^0.3.0",
    "selector-observer": "^2.1.6",
    "webext-additional-permissions": "^1.0.0",
    "whatwg-fetch": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.19.6",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.19.4",
    "@jetbrains/eslint-config": "^5.3.1",
    "@jetbrains/ring-ui-license-checker": "^1.5.5",
    "babel-loader": "^8.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.25.5",
    "eslint": "^8.25.0",
    "eslint-import-resolver-webpack": "^0.13.2",
    "eslint-plugin-angular": "^4.0.1",
    "eslint-plugin-bdd": "^2.1.1",
    "eslint-plugin-import": "^2.21.2",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.0",
    "imports-loader": "^4.0.1",
    "lint-staged": "^13.0.3",
    "node-polyfill-webpack-plugin": "^2.0.1",
    "regenerator-runtime": "^0.13.10",
    "terser-webpack-plugin": "^5.3.6",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0"
  },
  "lint-staged": {
    "*.js": [
      "yarn prebuild --fix"
    ]
  }
}
